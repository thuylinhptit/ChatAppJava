<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100sp"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/avatar_roomid"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/flag_vietnam"
    />
    <TextView
        android:id="@+id/roomnameid"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:translationY="17sp"
        android:text="Home"
        android:textAlignment="center"
        android:textSize="30sp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/peoplecountroomid"
        android:layout_width="300sp"
        android:layout_height="35sp"
        android:translationY="50sp"
        android:translationX="-300sp"
        android:text="People count"
        android:textSize="25sp"
        android:paddingLeft="10sp"
        android:gravity="left|center_horizontal" />
</LinearLayout>