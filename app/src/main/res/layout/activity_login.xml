<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chaticon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:id="@+id/textHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login ChatApp"
        android:layout_below="@+id/logo"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/activity_main_usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:inputType="textCapWords"
        android:hint="Username: "
        android:layout_centerInParent="true"
        android:layout_below="@+id/textHeading"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textColorHint="#757474"
        android:background="@drawable/rounded_edittext"
        />

    <EditText
        android:id="@+id/activity_main_passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:inputType="textCapWords"
        android:hint="Password:"
        android:layout_centerInParent="true"
        android:layout_below="@+id/activity_main_usernameEditText"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textColorHint="#757474"
        android:background="@drawable/rounded_edittext"
        />

    <android.widget.Button
        android:id="@+id/activity_main_loginButton"
        android:layout_below="@+id/activity_main_passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:shadowColor="@color/black"
        android:background="@drawable/custom_button"
        />

    <android.widget.Button
        android:id="@+id/activity_main_registerButton"
        android:layout_below="@+id/activity_main_loginButton"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="Register"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@drawable/custom_button"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/activity_main_registerButton"
            android:layout_marginLeft="200dp"
            />


