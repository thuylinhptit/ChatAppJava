<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:title="Edit Profile"
        app:titleTextColor="@color/white"
        android:background="@drawable/background2"
        />
    <LinearLayout
        android:id="@+id/set_avt"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/text_avt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avatar"
            android:layout_below="@+id/toolbar"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />
        <ImageButton
            android:id="@+id/btn_image"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/ic_baseline_camera_alt_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_avt"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/set_avt"
        android:src="@drawable/user"
        tools:ignore="MissingConstraints"
        />
    <ImageView
        android:id="@+id/line1"
        android:layout_below="@+id/circle_avt"
        android:layout_marginTop="20dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:id="@+id/set_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="Cover"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_edit_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_alignEnd="@+id/text_cover"
            android:layout_alignRight="@+id/text_cover"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="250dp"
            android:text="Edit"
            android:textColor="#3F65FC"
            android:textSize="25dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/image_cover"
        android:layout_below="@+id/set_cover"
        android:background="@drawable/cover"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        />

    <ImageView
        android:id="@+id/line3"
        android:layout_below="@+id/image_cover"
        android:layout_marginTop="20dp"
        android:background="@drawable/line"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_change_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Infomation"
        android:layout_below="@+id/line3"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/textFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_change_info"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Full name: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/fullname"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:id="@+id/profile_fullname_id"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textFullName"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="User name: "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/username"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:id="@+id/profile_username_id"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/textUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.widget.Button
            android:id="@+id/profile_edit_accept_btn"
            android:layout_width="100dp"
            android:text="ACCEPT"
            android:textColor="@color/white"
            android:background="@drawable/custom_button"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            />
        <android.widget.Button
            android:id="@+id/profile_edit_decline_btn"
            android:layout_width="100dp"
            android:background="@drawable/custom_button"
            android:text="DECLINE"
            android:textColor="@color/white"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="150dp"/>
    </LinearLayout>



</RelativeLayout>