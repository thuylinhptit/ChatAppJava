<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/watch_profile_id"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:padding="20dp"
                app:backgroundTint="#fff000"
                android:src="@drawable/ic_btn_profile"
                tools:ignore="SpeakableTextPresentCheck"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:text="Chat App"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <ImageButton
                android:id="@+id/home_friendbtn_id"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:padding="20dp"
                app:backgroundTint="#fff000"
                android:src="@drawable/ic_btn_friend"
                tools:ignore="SpeakableTextPresentCheck">
            </ImageButton>
            <ImageButton
                android:id="@+id/home_friendrequestbtn_id"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:padding="20dp"
                app:backgroundTint="#ffff00"
                android:src="@drawable/ic_btn_friend_request"
                tools:ignore="SpeakableTextPresentCheck">
            </ImageButton>
            <ImageButton
                android:id="@+id/home_search_btn_id"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:padding="20dp"
                app:backgroundTint="#ffff00"
                android:src="@drawable/ic_btn_search_friend"
                tools:ignore="SpeakableTextPresentCheck">
            </ImageButton>
        </LinearLayout>


    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/room_recyleview_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    />
</LinearLayout>