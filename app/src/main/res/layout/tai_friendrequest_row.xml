<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_profile_sender_id"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flag_vietnam"
        />
    <TextView
        android:id="@+id/friend_request_row_name"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:translationY="17dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:text="Nguyenx Dinh Tai"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/friend_request_row_btn_accept_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:text="OK"
        android:textSize="10dp"
        android:backgroundTint="#0000ff"
        android:layout_gravity="center"/>
    <Button
        android:id="@+id/friend_request_row_btn_decline_id"
        android:layout_width="50dp"
        android:layout_margin="5dp"
        android:layout_height="50dp"
        android:text="NO"
        android:textSize="10dp"
        android:backgroundTint="#ff0000"
        android:layout_gravity="center"/>
</LinearLayout>