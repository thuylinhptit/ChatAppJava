<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.testTai.TaiSearchUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/search_name_friend_id"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:hint="Input name here"/>
        <ImageButton
            android:id="@+id/search_friend_btn_id"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_btn_search_friend"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_list_friend_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>