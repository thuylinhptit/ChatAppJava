<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/avatar_roomid"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/flag_vietnam"
        />
    <TextView
        android:id="@+id/friend_row_name"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:translationY="17dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:text="Home"
        android:textSize="30sp"/>
    <Button
        android:id="@+id/friend_row_btnchat_id"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/friend_row_online_id"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="#68ce39"
        android:layout_margin="20dp"
        />
</LinearLayout>